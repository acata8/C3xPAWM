 @model UtenteInputModel

@{
    ViewData["Title"] = "Modifica Negozio";
}

<h4 class="title mt-3">Modifica i tuoi dati</h4>


@using((Html.BeginForm("Modifica", "Utente", FormMethod.Post))){
        
    @Html.HiddenFor(m => m.UtenteId)
    
    <div class="row mt-3">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 mt-3">
            <label for="Nome">Nome</label>
            <input class="form-control" asp-for="Nome" type="text">
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-5 mt-3">
            <label for="Email">Email</label>
            <input class="form-control" asp-for="Email" type="text">
        </div>
        <div class="col-md-3 mt-3">
            <label for="Password">Password</label>
            <input class="form-control" asp-for="Password" type="password" placeholder="Password attuale o nuova">
        </div>
    </div>
    
    <div class="row mt-3">
         <div class="col-md-4">
            <label for="Telefono">Telefono</label>
            <input class="form-control" asp-for="Telefono" type="text">
        </div>
    </div>

    <div class="row mt-3">

        <div class="col-md-8">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp; Salva</button>
        </div>
    </div>
}