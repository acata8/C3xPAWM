@model UtenteListViewModel

@{
    ViewData["Title"] = "Lista utenti";
}

<h1 class="title mt-3">@ViewData["Title"]</h1>

    <div class="mt-3 row">
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Users","Admin", FormMethod.Get)))
            {
                <div class="input-group">
                    <input class="form-control" type="text" name="search" placeholder="Cerca un utente per email" aria-label="Search" aria-describedby="searchAddon">
                    <div class="input-group-append">
                        <button class="input-group-text" title="Cerca"><i class="fas fa-filter"></i></button>
                    </div>
                </div>
            }
        </div>
    
    
        
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Users", "Admin", FormMethod.Get)))
            {
                <button type="submit" class="btn btn btn-outline-danger" title="Ricarica"><i class="fas fa-reply"></i> Ricarica</button>
            }
        </div>
    </div>



     <h1 class="color mt-3" style="font-size: 23px;"> Legenda </h1>
    <div class="row">
        <div class="col-md-5">
            <ul>
                <li class="mt-3">
                   <p> &nbsp;&nbsp;&nbsp;<i style="color: green; "class="far fa-check-circle"></i> In attivit&agrave;  </p>
                </li>
                 <li class="mt-2">
                    <p> &nbsp;&nbsp;&nbsp;<i style="color: gold; "class="fas fas fa-star"></i> Admin  </p>
                </li>
                 <li class="mt-2">
                    <p> &nbsp;&nbsp;&nbsp;<i style="color: red; "class="fas fa-times-circle "></i> Revocato/Non attivo </p>
                </li>
                <li class="mt-2">
                    <p> &nbsp;&nbsp;&nbsp;<i style="color: black; "class="fas fa-user-alt-slash"></i> Utente base </p>
                </li>
            </ul>
        </div>
    </div>
    
    <ul class="elenco mt-5">
        <li>
            <div class="row">
                <div class="col-md-6">
                    <p class="font-weight-bold">Email</p>
                </div>
                
                <div class="col-md-2">
                    <p class="font-weight-bold">Nome</p>
                </div>
                
                <div class="col-md-2">
                    <p class="font-weight-bold">Ruolo di registrazione</p>
                </div>
                <div class="col-md-2">
                    <p class="font-weight-bold">Attivit&agrave; aperta</p>
                </div>
                
            </div> 
        </li>
        @foreach(var utente in Model.Utenti.Elenco){
        <li>
            <div class="row">
                
                <div class="col-md-6">             
                    <p>@utente.Email</p>           
                </div>
                
                 <div class="col-md-2">
                    <p>@utente.Nome</p>
                </div>
                
                <div class="col-md-2">
                    <p>@utente.Ruolo</p>
                </div>
                <div class="col-md-2">
                    @{
                        @if(utente.Revocato == 0 && utente.Proprietario == 1 ){
                            <i style="color: green; "class="far fa-check-circle"></i>
                        }else if(utente.Ruolo == "Commerciante" || utente.Ruolo == "Corriere" || (utente.Revocato == 1 && utente.Proprietario == 1)){
                            <i style="color: red; "class="fas fa-times-circle "></i>
                        }else if(utente.Ruolo == "Administrator"){
                            <i style="color: gold; "class="fas fas fa-star"></i>
                        }else{
                            <i style="color: black; "class="fas fa-user-alt-slash"></i>
                        }
                    }
                    <p></p>
                </div>
                
            </div> 
        </li>   
        }
    </ul>

    
    

<vc:pagination model="@Model" />
