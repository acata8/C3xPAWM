@model CorriereListViewModel

@{
    ViewData["Title"] = "Dettagli corrieri";
}

<p class="color h2 mt-3">@ViewData["Title"]</p>

    <div class="mt-3 row">
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Corrieri","Admin", FormMethod.Get)))
            {
                <div class="input-group">
                    <input class="form-control" type="text" name="search" placeholder="Cerca un nominativo" aria-label="Search" aria-describedby="searchAddon">
                    <div class="input-group-append">
                        <button class="input-group-text" title="Cerca"><i class="fas fa-filter"></i></button>
                    </div>
                </div>
            }
        </div>
    
    
        
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Corrieri", "Admin", FormMethod.Get)))
            {
                <button type="submit" class="btn btn btn-outline-danger" title="Ricarica"><i class="fas fa-redo-alt fa-flip-horizontal fa-spin" aria-hidden="true"></i> Ricarica</button>
            }
        </div>
    </div>
    
    <ul class="elenco mt-5">
        <li>
            <div class="row">
                <div class="col-md-4"> <p class="font-weight-bold">Nominativo</p>  </div>
                <div class="col-md-2"> <p class="font-weight-bold">Proprietario</p>  </div>
                <div class="col-md-2"> <p class="font-weight-bold"> Telefono </p>  </div>
                <div class="col-md-2"> <p class="font-weight-bold"> Pacchi presi</p>  </div>
                <div class="col-md-2"> <p class="font-weight-bold"> Revocato </p>  </div>
            </div> 
        </li>
        @foreach(var corriere in Model.Corrieri.Elenco){
        <li>
            <div class="row">
                <div class="col-md-4"> <p  > @corriere.Nominativo</p>  </div>
                <div class="col-md-2"> <p  >@corriere.Proprietario</p>  </div>
                <div class="col-md-2"> <p  > @corriere.Telefono </p>  </div>
                <div class="col-md-2"> <p  > @corriere.Pacchi.Count() </p>  </div>
                <div class="col-md-1">
                    @if(corriere.Revocato == 1){
                        <i class="far fa-check-circle" style="color: green;"></i>
                    }else{
                        <i class="far fa-times-circle" style="color: red;"></i>
                    }
                </div>
            </div> 
        </li>
        }
    </ul>

<vc:pagination model="@Model" />
