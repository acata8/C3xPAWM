@model ElencoListViewModel

@{
    ViewData["Title"] = "Dettagli negozi";
}

<h1 class="title mt-3">@ViewData["Title"]</h1>

    <div class="mt-3 row">
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Negozi","Admin", FormMethod.Get)))
            {
                <div class="input-group">
                    <input class="form-control" type="text" name="search" placeholder="Cerca un negozio" aria-label="Search" aria-describedby="searchAddon">
                    <div class="input-group-append">
                        <button class="input-group-text" title="Cerca"><i class="fas fa-filter"></i></button>
                    </div>
                </div>
            }
        </div>
    
    
        
        <div class="col-md-4 d-flex align-items-center mt-2">
            @using((Html.BeginForm("Negozi", "Admin", FormMethod.Get)))
            {
                <button type="submit" class="btn btn btn-outline-danger" title="Ricarica"><i class="fas fa-reply"></i> Ricarica</button>
            }
        </div>
         
    </div>
    
    <ul class="elenco mt-5">
        <li>
            <div class="row">
                <div class="col-md-2">
                    <a asp-route-orderby="Nome" asp-route-ascending="@(Model.Input.OrderBy == "Nome" ? !Model.Input.Ascending : true)">Nome @if(@Model.Input.OrderBy == "Nome"){    <i class="fas fa-sort-alpha-@(Model.Input.Ascending ? "up":"down")"></i>}</a>
                </div>
                <div class="col-md-2">             
                    <p class="font-weight-bold">Luogo</p>           
                </div>
                
                <div class="col-md-2">
                    <p class="font-weight-bold">Proprietario</p>
                </div>
                <div class="col-md-3">
                    <p class="font-weight-bold"> Email</p>
                </div>
                <div class="col-md-1">
                    <p class="font-weight-bold">Revocato</p>
                </div>
                <div class="col-md-1">
                    <p class="font-weight-bold">Pubblicita</p>
                </div>
                <div class="col-md-1">
                    <p class="font-weight-bold">Token</p>
                </div>
            </div> 
        </li>
        @foreach(var negozio in Model.Negozi.Elenco){
        <li>
            <div class="row">
                <div class="col-md-2">
                    <p> @negozio.Nome</p>
                </div>
                
                <div class="col-md-2">                            
                    <p>@negozio.Citta</p>
                </div>
               
                <div class="col-md-2">
                    @negozio.Proprietario
                </div>
                <div class="col-md-3">
                    @negozio.ProprietarioUser.Email
                </div>

                <div class="col-md-1">
                    @if(negozio.Revocato == 1){
                        <i class="far fa-check-circle" style="color: green;"></i>
                    }else{
                        <i class="far fa-times-circle" style="color: red;"></i>
                    }
                </div>

                <div class="col-md-1">
                    @if(negozio.Pubblicita.Count() > 0){
                        <i class="far fa-check-circle" style="color: green;"></i>
                    }else{
                        <i class="far fa-times-circle" style="color: red;"></i>
                    }
                </div>
                <div class="col-md-1">
                    @negozio.Token
                </div>
            </div> 
        </li>
        }
    </ul>

<vc:pagination model="@Model" />
