
@{
    ViewData["Title"] = "Corriere";
}

@model CorriereDashboardViewModel

<h1 class="title"> @Model.Corriere.Nominativo </h1>
<h2 class="title"> questa &egrave; la tua dashboard. </h2>

<div class="container">
    <div class="row mt-3">
        <div class="col-md-3">
            <a class="btn btn-outline-primary" asp-action="Modifica" asp-controller="Corriere" asp-route-id="@Model.CorriereId"><i class="fas fa-user-edit"></i>    Modifica Corriere </a>
        </div>
    </div>

    <hr>
    
    <div class="row mt-1">
        <div class="col-md-3">
            
            <a class="btn btn-outline-primary" asp-action="NonAssegnati"  asp-controller="Corriere" asp-route-id="@Model.CorriereId"><i class="fas fa-dolly-flatbed"></i> Ordini non assegnati </a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-primary" asp-action="Consegna" asp-controller="Corriere" asp-route-id="@Model.CorriereId"><i class="far fa-calendar-check"></i> 
            Ordini da consegnare <span class="badge badge-danger"> @Model.PacchiAssegnati</span></a>

           
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-primary" asp-action="Cronologia" asp-controller="Corriere" asp-route-id="@Model.CorriereId"><i class="fas fa-history"></i> Cronologia ordini </a>
        </div>
    </div>
</div>
