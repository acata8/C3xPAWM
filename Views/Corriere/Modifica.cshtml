 @model CorriereInputModel

@{
    ViewData["Title"] = "Modifica Negozio";
}

<h4 class="title mt-3">Modifica i tuoi dati</h4>


@using((Html.BeginForm("Modifica", "Corriere", FormMethod.Post))){
        
    @Html.HiddenFor(m => m.CorriereId)
    
    <div class="row mt-3">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 mt-3">
            <label for="Nominativo">Nome Azienda</label>
            <input class="form-control" asp-for="Nominativo" type="text">
        </div>
    </div>

    <div class="row mt-3">
         <div class="col-md-4">
            <label for="Telefono">Telefono</label>
            <input class="form-control" asp-for="Telefono" type="text">
        </div>
    </div>

    <div class="row mt-3">

        <div class="col-md-8">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp; Salva</button>
        </div>
    </div>
}