@{
    ViewData["Title"] = "Non Assegnati";
}

@model PacchiListViewModel

<p class="color mt-2 h3"> Lista ordini non assegnati </p>

    @using(Html.BeginForm("NonAssegnati", "Corriere", FormMethod.Post)){
    @Html.HiddenFor(m => m.CorriereId)
        <div class="row mt-3">
            <div class="col-md-12">
                <ul class="elenco">
                    <li>
                        <div class="row">
                            <div class="col-md-2">
                                <p class="font-weight-bold"> MITTENTE </p>
                            </div>
                            <div class="col-md-3">
                                <p class="font-weight-bold"> LUOGO DI RITIRO </p>
                            </div>
                            <div class="col-md-2">
                                <p class="font-weight-bold"> DESTINATARIO </p>
                            </div>
                            <div class="col-md-3">
                                <p class="font-weight-bold"> LUOGO DI CONSEGNA </p>
                            </div>
                            <div class="col-md-2">
                                <p class="font-weight-bold"> PRENDI </p>
                            </div>
                            
                        </div> 
                    </li>
                
                    @foreach (var pacco in Model.Pacchi)
                    {
                        <li>
                            <div class="row">
                                <div class="col-md-2 mt-2">
                                  <p  >@pacco.Negozio.Nome </p>  
                                </div>
                                <div class="col-md-3 mt-2">
                                   <p  >@pacco.Partenza </p>  
                                </div>
                                 <div class="col-md-2 mt-2">
                                   <p  >@pacco.Utente.FullName </p> 
                                </div>
                                <div class="col-md-3 mt-2">
                                  <p  >@pacco.Destinazione </p>  
                                </div>
                                <div class="col-md-2" >
                                    <button class="btn btn-warning" name="PaccoId" id="PaccoId" value="@pacco.PaccoId"><i class="fas fa-dolly"></i></button>
                                </div>
                            </div> 
                        </li>
                    }
                </ul>
            </div>
        </div>
}