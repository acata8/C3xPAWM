@{
    ViewData["Title"] = "Non Assegnati";
}

@model PacchiListViewModel


<h2 class="title mt-2"> Lista ordini non assegnati </h2>

    @using(Html.BeginForm("NonAssegnati", "Corriere", FormMethod.Post)){
              
    @Html.HiddenFor(m => m.CorriereId);
        <div class="row mt-3">
            <div class="col-md-12">
                <ul class="elenco">
                    <li>
                        <div class="row">
                            <div class="col-md-2">
                                <p class="font-weight-bold"> MITTENTE </p>
                            </div>
                            <div class="col-md-3">
                                <p class="font-weight-bold"> LUOGO DI RITIRO </p>
                            </div>
                            <div class="col-md-2">
                                <p class="font-weight-bold"> DESTINATARIO </p>
                            </div>
                            <div class="col-md-3">
                                <p class="font-weight-bold"> LUOGO DI CONSEGNA </p>
                            </div>
                            <div class="col-md-2">
                                <p class="font-weight-bold"> PRENDI </p>
                            </div>
                            
                        </div> 
                    </li>
                
                    @foreach (var pacco in Model.Pacchi)
                    {
                        @Html.HiddenFor(m => m.Pacchi)
                        <li>
                            <div class="row">
                                <input type="hidden" name="PaccoId" id="PaccoId" value="@pacco.PaccoId">
                                <div class="col-md-2">
                                    @pacco.Negozio.Nome
                                </div>
                                <div class="col-md-3">
                                    @pacco.Partenza
                                </div>
                                 <div class="col-md-2">
                                   @pacco.Utente.FullName
                                </div>
                                <div class="col-md-3">
                                   @pacco.Destinazione
                                </div>
                                <div class="col-md-2" >
                                    <button class="btn btn-warning"><i class="fas fa-dolly"></i></button>
                                </div>
                            </div> 
                        </li>
                    }
                </ul>
            </div>
        </div>
}