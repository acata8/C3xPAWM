@{
    ViewData["Title"] = "Cronologia ordini";
}

@model PacchiListViewModel


<p class="color mt-3 h2"> Cronologia ordini </p>

<div class="row mt-2">
    <div class="col-md-12">
        <ul class="elenco">
            <li>
                <div class="row">
                    <div class="col-md-3">
                        <p class="font-weight-bold"> NEGOZIO </p>
                    </div>
                    <div class="col-md-4">
                        <p class="font-weight-bold"> LUOGO DI CONSEGNA </p>
                    </div>
                    <div class="col-md-3">
                        <p class="font-weight-bold"> DESTINATARIO </p>
                    </div>
                    <div class="col-md-2">
                        <p class="font-weight-bold"> DATA </p>
                    </div>
                </div> 
            </li>
                    @foreach (var pacco in Model.Pacchi)
                    {
                        @Html.HiddenFor(m => m.Pacchi)
                        <li>
                            <div class="row">
                                <div class="col-md-3">
                                    <p  >@pacco.Negozio.Nome </p>
                                </div>
                                <div class="col-md-4">
                                   <p  >@pacco.Destinazione </p>
                                </div>
                                <div class="col-md-3">
                                   <p  >@pacco.Utente.FullName </p>
                                </div>
                                <div class="col-md-2">
                                   <p  >@pacco.Data </p>
                                </div>
                            </div> 
                        </li>
                    }
        </ul>
    </div>
</div>
