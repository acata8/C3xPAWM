@model NegozioInputModel

@{
    ViewData["Title"] = "Negozio";
}


<p class="color mt-3 h3">Aggiungi il tuo negozio!</p>


@using((Html.BeginForm("Creazione", "Negozio", FormMethod.Post))){
        

    <div class="row mt-3">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 mt-3">
            <label for="Nome">Nome del negozio</label>
            <input class="form-control" asp-for="Nome" type="text">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 mt-3">
            <label for="Via">Via</label>
            <input class="form-control" asp-for="Via" type="text">
        </div>
        <div class="col-md-8 mt-3">
            <label for="Citta">Citt&agrave;</label>
            <input class="form-control" asp-for="Citta" type="text">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-2 mt-3">
            <label for="Provincia">Provincia</label>
            <input class="form-control" asp-for="Provincia" type="text">
        </div>
        <div class="col-md-6 mt-3">
            <label for="Regione">Regione</label>
            <input class="form-control" asp-for="Regione" type="text">
        </div>
    </div>
    
    

    <div class="row mt-3">
         <div class="col-md-8">
            <label for="Telefono">Telefono</label>
            <input class="form-control" asp-for="Telefono" type="text">
        </div>
        <div class="col-md-8 mt-3">
            <select  asp-items="@Html.GetEnumSelectList<Tipologia>().SkipLast(1)" name="Tipologia" id="Tipologia" class="form-control"></select>
        </div>
        
    </div>

    <div class="row mt-3">

        <div class="col-md-8">
                <button type="submit" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fas fa-cash-register"></i>&nbsp; Crea</button> 
        </div>
    </div>

       
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}