@model PubblicitaInputModel

@{
    ViewData["Title"] = "Pubblicita";
}

<h4 class="title mt-3">Pubblicizza il tuo negozio!</h4>

@using((Html.BeginForm("Pubblicita", "Negozio", FormMethod.Post))){
        

    @Html.HiddenFor(n => n.NegozioId)
    @Html.HiddenFor(n => n.PubblicitaId)

    <div class="row mt-3">
        <div class="col-md-12">
            <div asp-validation-summary="All"></div>
        </div>
    </div>
      <div class="row mt-3">
        <div class="col-md-12">
            <p class="font-weight-bold"> I tuoi token: @Model.Negozio.Token</p>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 mt-3">
            <label for="NomeEvento">Nome dell'evento</label>
            <input class="form-control" asp-for="NomeEvento" type="text">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-2 mt-3">
            <label for="Durata">Durata in giorni</label>
            <input class="form-control" asp-for="Durata" type="number" step="1">
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8">
            <button type="submit" class="btn btn-primary"><i cfar fa-save"></i>&nbsp; Salva</button>
        </div>
    </div>
}