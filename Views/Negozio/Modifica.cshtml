@model NegozioInputModel

@{
    ViewData["Title"] = "Modifica Negozio";
}

<p class="color mt-3 h3">Modifica il tuo negozio!</p>


@using((Html.BeginForm("Modifica", "Negozio", FormMethod.Post))){
    
    @Html.HiddenFor(n => n.NegozioId)
    
            <div class="row mt-2">
                    <div class="col-md-12">
                        <div asp-validation-summary="All"></div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-8">
                        <label for="Nome">Nome del negozio</label>
                        <input class="form-control" asp-for="Nome" type="text">
                    </div>
                </div>
               
                <div class="row ">
                    <div class="col-md-8 mt-2">
                         <hr>
                        <label for="Via">Via</label>
                        <input class="form-control" asp-for="Via" type="text">
                    </div>
                    <div class="col-md-8 mt-2">
                        <label for="Citta">Citt&agrave;</label>
                        <input class="form-control" asp-for="Citta" type="text">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2  mt-2">
                        <label for="Provincia">Provincia</label>
                        <input class="form-control" asp-for="Provincia" type="text">
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="Regione">Regione</label>
                        <input class="form-control" asp-for="Regione" type="text">
                    </div>
                    <div class="col-md-8 mt-2">
                        <label for="Telefono">Telefono</label>
                        <input class="form-control" asp-for="Telefono" type="text">
                    </div>
            </div>
        
        <div class="row">
            <div class="col-md-8">
                <hr>
                <label for="Tipologia">Tipologia</label>
                <select  asp-items="@Html.GetEnumSelectList<Tipologia>().SkipLast(1)" asp-for="Tipologia" class="form-control"></select>
            </div>
        </div>

    <div class="row mt-2">
        
    </div>

    <div class="row mt-3">

        <div class="col-md-8">
            <button type="submit" class="btn btn-outline-primary w-100 "><i class="fas fa-save"></i>&nbsp; Salva</button>
        </div>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}