@model List<NegozioViewModel>

@{
    ViewData["Title"] = "Elenco Regione";
}

    <div class="text-center">
        <h1 class="display-4">Lista negozi</h1>
    </div>


    <p class="text-center font-weight-bold">Negozi affiliati al sistema C3 nella regione @Model.First().Indirizzo.First().Regione</p>
    
        <ul>
                <li class="elenco">
                    <div class="row">
                        <div class="col-md-2">
                            <p class="font-weight-bold">Nome</p>
                        </div>
                        <div class="col-md-2">
                            <p class="font-weight-bold">Tipologia</p>
                        </div>
                        <div class="col-md-3">
                            <p class="font-weight-bold">Citta</p>
                        </div>
                        <div class="col-md-3">
                            <p class="font-weight-bold">Via</p>
                        </div>
                        
                        <div class="col-md-2">
                            <p class="font-weight-bold">Telefono</p>
                        </div>
                    </div> 
                </li>
                @foreach(NegozioViewModel negozio in Model){
                <li class="elenco">
                    <div class="row">
                        <div class="col-md-2">
                            <p> @negozio.Nome</p>
                        </div>
                         <div class="col-md-2 font-italic">
                            <p>@negozio.Tipologia</p>
                        </div>
                        <div class="col-md-3">
                            <p>@negozio.Indirizzo.First().Citta</p>
                        </div>
                        <div class="col-md-3">
                            <p>@negozio.Indirizzo.First().Via</p>
                        </div>
                       
                        <div class="col-md-2">
                            <p>@negozio.Telefono</p>
                        </div>
                    </div> 
                </li>
                }
            </ul> 