@model NegozioEditInputModel

@{
    ViewData["Title"] = "Modifica Negozio";
}

<h4 class="title mt-3">Aggiungi il tuo negozio!</h4>


@using((Html.BeginForm("Modifica", "Elenco", FormMethod.Post))){
    <input asp-for="NegozioId" type="hidden">
    
            <div class="row mt-2">
                    <div class="col-md-12">
                        <div asp-validation-summary="All"></div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-8">
                        <label for="Nome">Nome del negozio</label>
                        <input class="form-control" asp-for="Nome" type="text">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-8 mt-3">
                        <label for="Via">Via</label>
                        <input class="form-control" asp-for="Via" type="text">
                    </div>
                    <div class="col-md-8 mt-3">
                        <label for="Citta">Citt&agrave;</label>
                        <input class="form-control" asp-for="Citta" type="text">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-2  mt-2">
                        <label for="Provincia">Provincia</label>
                        <input class="form-control" asp-for="Provincia" type="text">
                    </div>
                    <div class="col-md-6 mt-2">
                        <label for="Regione">Regione</label>
                        <input class="form-control" asp-for="Regione" type="text">
                    </div>
            </div>

    
    

    <div class="row mt-2">
        <div class="col-md-4">
            
            <label  class="mt-2" for="Tipologia">Tipologia attiva</label>
            <input class="form-control" asp-for="Tipologia" type="text">
        </div>
        <div class="col-md-4 mt-4">
            <vc:tipologie></vc:tipologie>
        </div>

    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <label for="Telefono">Telefono</label>
            <input class="form-control" asp-for="Telefono" type="text">
        </div>
    </div>

    <div class="row mt-3">

        <div class="col-md-8">
            <button type="submit" class="btn btn-primary"><i class="far fa-save"></i>&nbsp; Salva</button>
        </div>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}